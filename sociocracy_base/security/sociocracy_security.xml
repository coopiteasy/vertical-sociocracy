<odoo>
    <data>
        <record id="group_sociocracy_user" model="res.groups">
            <field name="name">User</field>
        </record>

        <record id="group_sociocracy_coordinator" model="res.groups">
            <field name="name">Coordinator</field>
            <field name="implied_ids" eval="[(4, ref('group_sociocracy_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        
        <record id="group_sociocracy_facilitator" model="res.groups">
            <field name="name">Facilitator</field>
            <field name="implied_ids" eval="[(4, ref('group_sociocracy_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
    </data>
</odoo>