<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="view_role_tree" model="ir.ui.view">
            <field name="name">view.role.tree</field>
            <field name="model">role</field>
            <field name="arch" type="xml">
                <tree string="Roles" name="roles">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_role_form" model="ir.ui.view">
            <field name="name">view.role.form</field>
            <field name="model">role</field>
            <field name="arch" type="xml">
                <form string="Role" name="role">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet string="Role">
	                    <group>
	                        <field name="name"/>
	                        <field name="circle_id"/>
	                        <field name="person_id"/>
	                    </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

    <act_window
            id="action_sociocracy_role"
            name="Roles"
            res_model="role"
            view_mode="tree,form"
            view_id="view_role_tree"
    />

    <menuitem id="menu_sociocracy_roles"
              name="Roles"
              parent="menu_sociocracy_base"
              action="action_sociocracy_role"
    />

    </data>
</odoo>